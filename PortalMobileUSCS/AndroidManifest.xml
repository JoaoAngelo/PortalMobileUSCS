            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activitys.MenuActivity" />
        </activity>

        <!-- Turma Activity -->
        <activity
            android:name=".activitys.TurmaActivity"
            android:label="Minha Turma"
            android:logo="@drawable/btn_turma"
            android:parentActivityName=".activitys.MenuActivity"
            android:screenOrientation="portrait" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
