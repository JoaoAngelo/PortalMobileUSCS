                android:value=".activitys.MenuActivity" />
        </activity>

        <!-- Downloads Activity -->
        <activity
            android:name=".activitys.DownloadActivity"
            android:label="Downloads"
            android:logo="@drawable/btn_downloads"
            android:parentActivityName=".activitys.MenuActivity"
