        </activity>

        <!-- Sobre Activity -->
        <activity
            android:name=".activitys.SobreActivity"
            android:label="Sobre"
            android:logo="@drawable/btn_sobre"
            android:parentActivityName=".activitys.MenuActivity"
            android:screenOrientation="portrait" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activitys.MenuActivity" />
        </activity>
    </application>

</manifest>